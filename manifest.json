{
  "manifest_version": 2,

  "name": "DocuViz",
  "version": "3.3",
  "description": "Visualize the evolution of authors' contributions in a Google Doc",
  "background": {
    "scripts": ["js/lib/underscore.js", "js/lib/jquery.min.js","js/lib/async.js","js/model.js","js/lib/d3.min.js"]
  },
  "content_scripts":[{
    "matches" : ["*://docs.google.com/*"],
    "css": ["css/global.css","css/jquery-ui.min.css"],
    "js": ["js/lib/underscore.js", "js/lib/jquery.min.js","js/view.js","js/lib/d3.min.js","js/lib/async.js", "js/lib/jquery-ui.min.js"]
  }],
  "permissions": [
    "webRequest",
    "activeTab",
    "*://docs.google.com/*"
  ],
  "web_accessible_resources": [
      "css/global.css",
      "js/lib/underscore-min.map"
    ]
}
